{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "instance_type": "m3.medium"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ami_description": "Conjur Docker AMI",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-ad5529c8",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "conjur-docker-{{timestamp}}",
    "launch_block_device_mappings": [{
      "device_name": "/dev/sda1",
      "delete_on_termination": true,
      "volume_size": 120
    }]
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "conjur-appliance.tar",
      "destination": "/tmp/conjur-appliance.tar"
    },
    {
      "type": "shell",
      "scripts": ["scripts/provision.sh"],
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    },
    {
      "type": "shell",
      "inline": ["rm -f /tmp/conjur-appliance.tar"]
    }
  ]
}