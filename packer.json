{
  "_baseami": "'source_ami' created in ./base_ami",
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "instance_type": "m3.medium",
    "appliance_image_tag": "latest"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ami_description": "Conjur Docker AMI",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-50b0963a",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "conjur-docker-{{timestamp}}",
    "launch_block_device_mappings": [{
      "device_name": "/dev/sda1",
      "delete_on_termination": true,
      "volume_size": 20
    }]
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "conjur-appliance.tar.gz",
      "destination": "/tmp/conjur-appliance.tar.gz"
    },
    {
      "type": "shell",
      "scripts": ["scripts/provision.sh"],
      "environment_vars": ["APPLIANCE_IMAGE_TAG={{user `appliance_image_tag`}}"],
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    },
    {
      "type": "shell",
      "inline": ["rm -f /tmp/conjur-appliance.tar*"]
    }
  ]
}