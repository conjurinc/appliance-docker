{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "source_ami": "{{env `AMI`}}",
    "appliance_image_tag": null,
    "instance_type": "m3.medium"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ami_description": "Official CyberArk DAP AMI",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ec2-user",
    "ami_name": "CyberArk-DAP-{{user `appliance_image_tag`}}-{{timestamp}}",
    "launch_block_device_mappings": [{
      "device_name": "/dev/xvda",
      "delete_on_termination": true,
      "volume_size": 100,
      "volume_type": "gp2"
    }],
    "tags": {
      "DAP/version": "{{user `appliance_image_tag`}}",
      "created": "{{timestamp}}"
    }
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "/opt/dap-appliance.tar.gz",
      "destination": "/tmp/dap-appliance.tar.gz"
    },
    {
      "type": "file",
      "source": "/opt/files/seccomp.json",
      "destination": "/tmp/seccomp.json"
    },
    {
      "type": "file",
      "source": "/opt/files/configuration.json",
      "destination": "/tmp/configuration.json"
    },
    {
      "type": "file",
      "source": "/opt/scripts/dap-ami-bootstrap.sh",
      "destination": "/tmp/dap-ami-bootstrap.sh"
    },
    {
      "type": "shell",
      "inline": [
        "mv /tmp/dap-appliance.tar.gz /opt/",
        "mv /tmp/dap-ami-bootstrap.sh /opt/",
        "mkdir -p /opt/cyberark/dap/security",
        "mv /tmp/seccomp.json /opt/cyberark/dap/security/",
        "mv /tmp/seccomp.json /opt/cyberark/dap/security/",
        ". /opt/dap-ami-bootstrap.sh"
      ],
      "execute_command": "sudo bash {{.Path}}"
    }
  ]
}
